{
  "name": "bomba-management-system",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "نظام إدارة شامل للكافيهات وصالات الألعاب",
  "keywords": [
    "cafe",
    "gaming",
    "management",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Bomba Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "dev:safe": "concurrently \"npm run server:dev\" \"vite --host 0.0.0.0\"",
    "client:dev": "vite",
    "server:dev": "cd server && npm run dev",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "cd server && npm start",
    "server:prod": "cd server && npm start",
    "install:server": "cd server && npm install",
    "install:all": "npm install && npm run install:server",
    "start": "npm run dev",
    "build:all": "npm run build && cd server && npm run build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "seed:admin": "cd server && node scripts/seedAdmin.js",
    "migrate:tables": "cd server && node scripts/migrateTableReferences.js",
    "check:replica": "node server/scripts/checkReplicaSet.js",
    "init:replica": "node server/scripts/initializeReplicaSet.js",
    "sync:initial": "node server/scripts/initialSync.js"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@react-pdf/renderer": "^4.3.2",
    "@types/qrcode": "^1.5.6",
    "@types/react-date-range": "^1.4.10",
    "@types/recharts": "^1.8.29",
    "antd": "^5.28.1",
    "axios": "^1.10.0",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.19",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.344.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-date-range": "^2.0.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "react-toastify": "^11.0.5",
    "recharts": "^3.4.1",
    "socket.io-client": "^4.8.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/bomba.git"
  },
  "bugs": {
    "url": "https://github.com/your-repo/bomba/issues"
  },
  "homepage": "https://bomba.com"
}
